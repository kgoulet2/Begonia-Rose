<div class="collection-block">
  <div class="collection-carousel">
    {% if block.settings.collection == blank %}
      {% for i in (1..6) %}
        {% capture current %}{{ forloop.index }}{% endcapture %}
        {%- assign placeholder = 'collection-' | append: current -%}
        <div class="lazyOwl product" data-alpha="{{ product.title }}" data-price="{{ product.price }}">
          <div class="collection-image ci onboard">
            <a href="#">
              {{ placeholder | placeholder_svg_tag }}
            </a>
            <div class="bottom-right-details">
              <h2><a href="#">Sample collection {{ forloop.index }}</a></h2>
          </div>
          </div>
          <div class="product-details">
            <h3><a href="#">Sample product {{ forloop.index }}</a></h3>
          </div>
        </div>
      {% endfor %}
    {% else %}
      {% for product in collection.products %}
{%- include 'bold-product' with product, hide_action: 'skip' -%}
        <div class="lazyOwl product" data-alpha="{{ product.title }}" data-price="{{ product.price }}">
          {% include 'product-listing' %}
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>
